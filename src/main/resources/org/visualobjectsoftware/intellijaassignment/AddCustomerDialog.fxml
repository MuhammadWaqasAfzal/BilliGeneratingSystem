<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.ComboBox?>
<?import java.net.URL?>
<VBox alignment="center" style="-fx-padding: 40px;" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.visualobjectsoftware.intellijaassignment.customers.AddCustomerDialogController">
    <VBox spacing="20">

        <HBox spacing="10" alignment="CENTER">
            <Label text="Name:"/>
            <TextField fx:id="nameTextField" promptText="Name"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER">
            <Label text="Email"/>
            <TextField fx:id="emailTextField" promptText="Email"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER">
            <Label text="Address"/>
            <TextField fx:id="addressTextField" promptText="Address"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER">
            <Label text="Post Code"/>
            <TextField fx:id="postCodeTextField" promptText="Post Code"/>
        </HBox>


        <HBox spacing="10" alignment="CENTER">
            <Label text="Electric MeterNo:"/>
            <TextField fx:id="electricMeterNoTextField" promptText="Electric MeterNo"/>
        </HBox>
        
          <HBox spacing="10" alignment="CENTER">
            <Label text="Gas MeterNo:"/>
            <TextField fx:id="gasMeterNoTextField" promptText="Gas MeterNo"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Electricity Tariff:" />
            <ComboBox fx:id="tariffComboBox" maxWidth="250" promptText="Select Electricity Tariff" />
        </HBox>


        <HBox spacing="10" alignment="CENTER">
            <Label text="Gas Tariff:" />
            <ComboBox fx:id="gasTariffComboBox" maxWidth="250" promptText="Select Gas Tariff" />
        </HBox>

    </VBox>

    <Label fx:id="errorLabel" textFill="red" text="" visible="false" managed="false"/>


    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="saveButton" text="Save" onAction="#saveButtonClicked" maxWidth="250"
	 	style="-fx-padding: 10px; -fx-font-size: 18px;  -fx-font-weight: bold;  -fx-background-color: #000075; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#cancelButtonClicked" maxWidth="250"
	 	style="-fx-padding: 10px; -fx-font-size: 18px;  -fx-font-weight: bold;  -fx-background-color: #000075; -fx-text-fill: white;"/>
    </HBox>
</VBox>
